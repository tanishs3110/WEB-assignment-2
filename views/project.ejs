<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= project.title %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-base-200 text-base-content">
  <%- include('partials/navbar', {page: ''}) %>

  <div class="container mx-auto px-6 py-10">
    <!-- Header -->
    <div class="text-center mb-10">
      <h1 class="text-5xl font-bold mb-2"><%= project.title %></h1>
      <p class="text-gray-400">
        Below, you will find detailed information about the project: 
        <span class="font-medium text-gray-300"><%= project.title %></span>.
      </p>
    </div>

    <!-- Two-column content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start">
      <!-- Left: image -->
      <div class="flex justify-center">
        <img src="<%= project.feature_img_url %>" 
             alt="<%= project.title %>"
             class="rounded-lg shadow-lg w-full max-w-md object-cover border border-gray-700" />
      </div>

      <!-- Right: details -->
      <div class="space-y-6">
        <section>
          <h2 class="text-2xl font-semibold text-primary mb-2">Intro</h2>
          <p class="leading-relaxed text-justify"><%= project.intro_short %></p>
        </section>

        <section>
          <h2 class="text-2xl font-semibold text-primary mb-2">Impact</h2>
          <p class="leading-relaxed text-justify"><%= project.impact %></p>
        </section>

        <div>
          <a class="btn btn-primary" href="<%= project.original_source_url %>" 
             target="_blank" rel="noopener">
            More Info
          </a>
        </div>

        <div id="quote" class="bg-base-300 p-5 rounded-lg border border-gray-700 shadow">
          <p id="quoteText" class="italic text-lg text-gray-100 mb-1">Loading quote…</p>
          <p id="quoteAuthor" class="italic text-sm text-gray-400"></p>
        </div>

        <div>
          <a class="btn btn-primary" 
           href="#" onclick="history.back(); return false;">
            Back</a>
        </div>
      </div>
    </div>
  </div>

  <script>
  document.addEventListener("DOMContentLoaded", () => {
    fetch('https://dummyjson.com/quotes/random')
      .then(res => res.json())
      .then(q => {
        document.getElementById('quoteText').textContent = q.quote || 'No quote available.';
        document.getElementById('quoteAuthor').textContent = q.author ? '— ' + q.author : '';
      })
      .catch(() => {
        document.getElementById('quoteText').textContent = 'Could not load quote.';
      });
  });
  </script>
</body>
</html>
