<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Projects</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', {page:'/solutions/projects'}) %>

  <div class="container mx-auto p-4">
    <div class="hero">
      <div class="hero-content">
        <div>
          <h1 class="text-4xl font-bold">Projects</h1>
          <p>Filter by sector:
            <a class="btn btn-sm" href="/solutions/projects?sector=Electricity">Electricity</a>
            <a class="btn btn-sm" href="/solutions/projects?sector=Transportation">Transportation</a>
            <a class="btn btn-sm" href="/solutions/projects?sector=Industry">Industry</a>
          </p>
        </div>
      </div>
    </div>

    
    <div class="mt-6 overflow-x-auto">
      <table class="table w-full">
        <thead><tr><th>Title</th><th>Sector</th><th>Summary</th><th></th></tr></thead>
        <tbody>
          <% projects.forEach(function(p){ %>
            <tr>
              <td><%= p.title %></td>
              <td><a class="btn btn-outline btn-sm" href="/solutions/projects?sector=<%= encodeURIComponent(p.sector) %>"><%= p.sector %></a></td>
              <td><%= p.summary_short %></td>
              <td><a class="btn btn-primary btn-sm" href="/solutions/projects/<%= p.id %>">Details</a></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
